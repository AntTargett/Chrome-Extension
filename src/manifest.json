{
    "manifest_version": 2,
    "name": "AntsExtension",
    "description": "Something about Ants",
    "version": "0.0.1",
    "author": "Antony Targett",
    "browser_action": {
        "default_icon": "images/ant_icon.png",
        "default_title": "GithubTab",
        "default_popup": "build/Popup/PopupContainer/index.html"
    },
    "icons": {
        "16": "images/ant_icon_16.png",
        "48": "images/ant_icon_48.png",
        "128": "images/ant_icon_128.png"
    },
    "chrome_url_overrides": {
        "newtab": "build/NewTab/NewTabContainer/index.html"
    },
    "content_security_policy": "unsafe-eva 'self' 'unsafe-inline' https://ajax.googleapis.com http://cdnjs.cloudflare.com; object-src 'self'",

    "permissions": ["activeTab"],
    "web_accessible_resources": [
        "images/*.png",
        "style/double-rainbow.css",
        "script/double-rainbow.js",
        "script/main.js",
        "templates/*"
    ]
}
