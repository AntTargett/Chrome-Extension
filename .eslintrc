{
    "env": {
      "browser": true,
      "es6": true,
      "commonjs": true
    },
    "extends": ["airbnb", "prettier", "prettier/react"],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": ["react", "import", "prettier"],
    "rules": {
      "allowArrowFunctions": true,
      "react/prop-types": 0,
      "react/jsx-uses-vars": [2],
      "react/jsx-filename-extension": ["warn", { "extensions": [".js", ".jsx"] }]
    }
  }